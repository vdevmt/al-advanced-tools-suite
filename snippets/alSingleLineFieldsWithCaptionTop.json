{
    "Snippet (viacovone): single-line fields with caption at the top": {
        "prefix": "tsingleLineFieldsWithCaptionTop",
        "description": "Snippet (viacovone): organize page fields in a single-line structure with caption at the top",
        "scope": "al",
        "body": [
           "group(FieldsGroup)",
            "{",
            "    ShowCaption = false;",
            "",
            "    grid(SingleLineFields)",
            "    {",
            "        ShowCaption = false;",
            "",
            "        group(Field1Group)",
            "        {",
            "            Caption = 'Field 1';",
            "            field(Field1; Field1)",
            "            {",
            "                ApplicationArea = All;",
            "                ShowCaption = false;",
            "            }",
            "        }",
            "        group(Field2Group)",
            "        {",
            "            Caption = 'Field 2';",
            "            field(Field2; Field2)",
            "            {",
            "                ApplicationArea = All;",
            "                ShowCaption = false;",
            "            }",
            "        }",
            "        group(Field3Group)",
            "        {",
            "            Caption = 'Field 3';",
            "            field(Field3; Field3)",
            "            {",
            "                ApplicationArea = All;",
            "                ShowCaption = false;",
            "            }",
            "        }",
            "    }",
            "}"
        ]        
    }
}
